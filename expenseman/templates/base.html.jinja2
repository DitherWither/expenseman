<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{% endblock title %}</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='app.css') }}">
    {% block head %}

    {% endblock head %}
</head>

<body>
    <header>
        <h1>ExpenseMan</h1>
        <nav>
            {% if session['user_id'] %}
                <a href="{{ url_for('app.auth.logout') }}">Logout</a>
            {% else %}
                <a href="{{ url_for('app.auth.login_get')}}">Login</a>
            {% endif %}
        </nav>
    </header>
    <main>
        {% for message in get_flashed_messages() %}
            <div class="alert">{{ message }}</div>
        {% endfor %}
        {% block content %}

        {% endblock content %}
    </main>
</body>

</html>